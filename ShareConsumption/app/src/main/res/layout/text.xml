<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_red"
    android:orientation="vertical"
    tools:context=".activity.auth.SettingsActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/my_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fcfcfc"
                android:fadingEdge="none|vertical"
                android:fitsSystemWindows="false"
                android:importantForAutofill="auto"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scrollIndicators="right|start"
                android:scrollbarAlwaysDrawVerticalTrack="true">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/img_profile"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="top|center_horizontal"
                                    android:padding="5dp"
                                    app:srcCompat="@drawable/googleplus_icon" />

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:background="@drawable/setting_title">

                                        <TextView
                                            android:id="@+id/lblusername"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical|right"
                                            android:padding="5dp"
                                            android:text="@string/setting_username"
                                            android:textColor="@color/title_color"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:id="@+id/username"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical|left"
                                            android:padding="5dp"
                                            android:text="홍길동"
                                            android:textColor="@color/title_color"
                                            android:textSize="12dp" />
                                    </TableRow>

                                    <TableRow
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp">

                                        <TextView
                                            android:id="@+id/lbluseremail"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center_vertical|right"
                                            android:padding="5dp"
                                            android:text="@string/setting_useremail"
                                            android:textColor="@color/title_color"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:id="@+id/useremail"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:gravity="center_vertical|left"
                                            android:padding="5dp"
                                            android:text="hong@gmail.com"
                                            android:textColor="@color/title_color"
                                            android:textSize="12dp" />

                                    </TableRow>
                                </TableLayout>
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title">

                            <TextView
                                android:id="@+id/lbldonationinfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="@string/setting_donationinfo"
                                android:textColor="@color/title_color"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/donationdesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_span="2"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="@string/donationdesc"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />
                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lblthreshold"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_threshold"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/threshold"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="right|center_vertical"
                                android:inputType="number"
                                android:padding="10dp"
                                android:text="50000"
                                android:textColor="#000000"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="12dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lblpercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_percent"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/percent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="right|center_vertical"
                                android:inputType="number"
                                android:padding="10dp"
                                android:text="50"
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbloverall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_overall"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <Switch
                                android:id="@+id/overall"
                                style="@style/SwitchCompatStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:checked="false"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:textOff="@string/setting_switchoff"
                                android:textOn="@string/setting_switchon"
                                android:textSize="12dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbloveralldesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_span="2"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="@string/overalloff"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbllastday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_lastday"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <Switch
                                android:id="@+id/lastday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:checked="true"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:textOff="@string/setting_switchoff"
                                android:textOn="@string/setting_switchon"
                                android:textSize="12dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbldonationday"
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_donationday"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <EditText
                                android:id="@+id/donationday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:enabled="false"
                                android:gravity="right|center_vertical"
                                android:inputType="number"
                                android:padding="10dp"
                                android:text="1"
                                android:textColor="#000000"
                                android:textSize="12dp" />
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:stretchColumns="*">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:padding="5dp">

                            <Button
                                android:id="@+id/select_donation"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:background="@drawable/button"
                                android:drawableLeft="@drawable/icon_search"
                                android:paddingLeft="10dp"
                                android:text="후원 기관 선택"
                                android:textAlignment="textStart"
                                android:textColor="#ffffff"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_span="2"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="@string/setting_selecteddonationinfo"
                                android:textColor="@color/title_color"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbldonation_name"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_selecteddonationname"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/donation_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbldonation_address"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_selecteddonationaddr"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/donation_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbldonation_tel"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_selecteddonationtel"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/donation_tel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:text=""
                                android:textColor="#0000ff"
                                android:textSize="12dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbldonation_www"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_selecteddonationwww"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/donation_www"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:text=""
                                android:textColor="#0000ff"
                                android:textSize="12dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbldonation_bank"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_selecteddonationbank"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/donation_bank"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbldonation_account"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical|right"
                                android:padding="10dp"
                                android:text="@string/setting_selecteddonationacc"
                                android:textColor="@color/title_color"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/donation_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:text=""
                                android:textColor="#000000"
                                android:textSize="12dp" />

                        </TableRow>

                    </TableLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/row_border"
                            android:padding="5dp">

                            <Button
                                android:id="@+id/pwdsetting"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_span="2"
                                android:layout_weight="1"
                                android:background="@drawable/month_table"
                                android:drawableLeft="@android:drawable/ic_lock_idle_lock"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="@string/setting_lbldebugpwd"
                                android:textColor="@color/colorWhite"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title">

                            <TextView
                                android:id="@+id/lblpwd1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="10dp"
                                android:text="@string/setting_trans_pwd"
                                android:textColor="@color/title_color"
                                android:textSize="12dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/pwd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:gravity="center_vertical|left"
                                android:inputType="number|textPassword"
                                android:padding="10dp"
                                android:password="true"
                                android:textColor="@color/red"
                                android:textCursorDrawable="@drawable/color_cursor"
                                android:textSize="12dp" />
                        </TableRow>
                    </TableLayout>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:stretchColumns="2">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title">

                            <TextView
                                android:id="@+id/lbldebuginfo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="@string/setting_debug"
                                android:textColor="@color/title_color"
                                android:textSize="16dp"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_title"
                            android:padding="5dp">

                            <Switch
                                android:id="@+id/debug"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/setting_content"
                                android:checked="false"
                                android:gravity="center_vertical|left"
                                android:padding="10dp"
                                android:textOff="@string/setting_switchoff"
                                android:textOn="@string/setting_switchon"
                                android:textSize="12dp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/setting_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/lbldebugdesc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_span="2"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:text="@string/debugdesc"
                                android:textColor="@color/title_color"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>


                    <Button
                        android:id="@+id/applySettings"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/button"
                        android:gravity="center"
                        android:text="@string/apply_setting"
                        android:textColor="@color/colorWhite"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="top|center_horizontal"
            android:padding="5dp"
            app:srcCompat="@drawable/setting_logo" />
    </FrameLayout>
</LinearLayout>
