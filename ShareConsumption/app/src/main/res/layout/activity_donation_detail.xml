<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/donationdetail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".activity.DonationDetailActivity">


    <ScrollView
        android:id="@+id/my_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none|vertical"
        android:fitsSystemWindows="false"
        android:importantForAutofill="auto"
        android:scrollIndicators="right|start"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/log"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@color/red"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/popup" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:stretchColumns="3">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/row_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/donationdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/donationdetaildesc"
                        android:textColor="@color/title_color"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="카드 종류"
                        android:textColor="@color/title_color"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/imgcard"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:src="@drawable/ic_unknown" />

                    <TextView
                        android:id="@+id/lblcard"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="신한체크카드"
                        android:textColor="@color/title_color"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:background="@color/chartborder"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="분류"
                        android:textColor="@color/title_color"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/imgcategory"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:src="@drawable/meal" />

                    <TextView
                        android:id="@+id/lblcategory"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="식사"
                        android:textColor="@color/title_color"
                        android:textSize="12dp" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:background="@color/chartborder"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblthreshold"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="후원 상한 금액"
                        android:textColor="@color/title_color"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/threshold"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:padding="10dp"
                        android:text="50000"
                        android:textColor="#000000"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="12dp" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:background="@color/chartborder"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lblpercent"
                        android:layout_width="8dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="후원 백분률"
                        android:textColor="@color/title_color"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/percent"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:padding="10dp"
                        android:text="50"
                        android:textColor="#000000"
                        android:textSize="12dp" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_span="2"
                        android:layout_weight="1"
                        android:background="@color/chartborder"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lbloverall"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:text="상한액 전체"
                        android:textColor="@color/title_color"
                        android:textSize="12dp" />

                    <Switch
                        android:id="@+id/overall"
                        style="@style/SwitchCompatStyle"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:gravity="center_vertical|left"
                        android:padding="10dp"
                        android:textOff="안함"
                        android:textOn="사용"
                        android:textSize="16dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/row_border"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lbloveralldesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text="@string/overalloff"
                        android:textColor="@color/title_color"
                        android:textSize="14dp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <Button
                    android:id="@+id/delSetting"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:background="@drawable/button_box_round"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/delSetting"
                    android:textColor="#ffff"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/applyDonationDetail"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_box_round"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="@string/apply_donation_detail"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
